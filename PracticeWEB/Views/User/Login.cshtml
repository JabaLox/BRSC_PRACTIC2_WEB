@{
}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6 centered-form">
            <h2 class="text-center text-white">Авторизация</h2>
            <form class="text-white" asp-controller="User" asp-action="LoginApi">
                <div class="form-group">
                    <label for="login">Логин</label>
                    <input type="text" class="form-control" name="login" id="login" placeholder="Ввод логина">
                </div>
                <div class="form-group">
                    <label for="password">Пароль</label>
                    <input type="password" class="form-control" name="password" id="password" placeholder="Ввод пароля">
                </div>
                <button type="submit" class="btn btn-primary btn-block mt-3">Войти</button>
            </form>
        </div>
    </div>
</div>

@if (TempData["DangerMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["DangerMessage"]
    </div>
}
