@{
}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6 centered-form">
            <h2 class="text-center">Редактирование пользователя</h2>
            <form class="text-white" asp-controller="User" asp-action="UpdateUser" method="post">
                <div class="form-group">
                    <label for="login">Логин</label>
                    <input asp-for="LoginUser" type="text" class="form-control" id="login" placeholder="Enter your login">
                    <input asp-for="IdUser" type="hidden" class="form-control">
                </div>
                <div class="form-group">
                    <label for="password">Пароль</label>
                    <input asp-for="PasswordUser" type="text" class="form-control" id="password" placeholder="Enter your password">
                </div>
                <div class="form-group">
                    <label for="name">Имя</label>
                    <input asp-for="NameUser" type="text" class="form-control" id="name" placeholder="Enter your name">
                </div>
                <div class="form-group">
                    <label for="role">Роль</label>
                    <select asp-for="RoleUser" class="form-control" id="role">
                        <option value="1">Клиент</option>
                        <option value="2">Менеджер</option>
                        <option value="3">Администратор</option>
                    </select>
                </div>
                <button type="submit" class="btn btn-primary btn-block mt-3">Изменить</button>
            </form>
        </div>
    </div>
</div>

@if (TempData["DangerMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["DangerMessage"]
    </div>
}
