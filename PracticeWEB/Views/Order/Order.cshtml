@model List<OrderProduct>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<div id="orderList" class="row">
    @foreach (var item in Model)
    {
        <div class="col-sm-4">
            <div class="card mb-3">
                <div class="card-body">
                    <h5 class="card-title">@item.ArticleProductNavigation.NameProduct</h5>
                    <p class="card-text">@item.ArticleProduct</p>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">@item.ArticleProductNavigation.ManufactureNavigation.NameManufacture</li>
                    <li class="list-group-item">@item.ArticleProductNavigation.CategoryNavigation.NameCategory</li>
                    <li class="list-group-item">@item.ArticleProductNavigation.CostProduct</li>
                    <li class="list-group-item">@item.IdOrder</li>
                    <li class="list-group-item">@item.IdOrderNavigation.OrderDate</li>
                    <li class="list-group-item">@item.IdOrderNavigation.UserOrderNavigation.NameUser</li>
                </ul>
            </div>
        </div>
    }
</div>